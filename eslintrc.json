{
  "extends": "airbnb",
  "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jasmine": true,
      "node": true
    },
    "settings": {
      "ecmascript": 6,
      "jsx": true
    },
    "plugins": [
      "react"
    ],
    "globals": {
      "before": true,
      "assert": true,
      "path": true
    },
    "rules": {
      "no-extra-strict": 0,
      "max-len": [1, 120, 2, {"ignoreComments": true}],
      "quote-props": [1, "consistent-as-needed"],
      "no-cond-assign": [2, "except-parens"],
      "radix": 0,
      "space-infix-ops": 0,
      "no-unused-vars": [1, {"vars": "local", "args": "none"}],
      "no-param-reassign": 0,
      "react/prefer-es6-class": 0,
      "arrow-body-style": [2, "always"]
    }
}
